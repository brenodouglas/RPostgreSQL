+                      dbname=Sys.getenv("POSTGRES_DATABSE"))
+ 
+     dbTypeTests(con, "timestamp")
+     dbTypeTests(con, "timestamp with time zone")
+     dbTypeTests(con, "date")
+ 
+     dbDisconnect(con)
